@model WithdrawlRequest
@{
    ViewData["Title"] = "Withdraw";
}

@if (Model != null && !Model.InvalidAccount)
{
    @using (Html.BeginForm())
    {

        @Html.HiddenFor(m => m.AccountType)
        @Html.HiddenFor(m => m.Balance)
        <div class="row">

            <div class="alert alert-info">

                <br />
                <h3>Total available balance : $ @Model.Balance</h3>
                <br />

                <h4>
                    Provide desired amount in the textbox and click submit.
                    Withdrawls can only be made in multiples of $5.

                    <br /><br />

                    Alternatively select a predefined amount by clicking at the options below.
                </h4>

                <br />
            </div>

            <div class="col-md-6">

                <h5><b>Specify desired amount.</b></h5>
                <br />
                <div class="col-md-6">
                    <input asp-for="Amount" class="form-control" />
                </div>
                <div class="col-md-6">
                    <button type="submit" name="command" value="amount" class="btn btn-primary"> Submit </button>
                </div>

            </div>

            <div class="col-md-6">

                <h5><b>Select predefined amount.</b></h5>
                <br />


                <button type="submit" name="command" value="5" class="btn btn-lg btn-primary" style="min-width:100px;"> $5 </button>&nbsp; &nbsp; &nbsp;
                <button type="submit" name="command" value="10" class="btn btn-lg btn-primary" style="min-width:100px;"> $10 </button>&nbsp; &nbsp; &nbsp;
                <button type="submit" name="command" value="20" class="btn btn-lg btn-primary" style="min-width:100px;"> $20 </button>&nbsp; &nbsp; &nbsp;

            </div>
        </div>

        <br />
        <br />
        <br />
        <br />

    }
}



@foreach (var item in Model.SuccessMessage)
{
    <div class="alert alert-success">
        <strong>Success!</strong> @item.
    </div>
}

@foreach (var item in Model.ErrorMesage)
{
    <div class="alert alert-danger">
        <strong>Error!</strong> @item.
    </div>
}



<div class="row">
    <div class="col-md-12 ">
        <a asp-area="" asp-controller="Home" asp-action="Transactions" style="min-width:200px;" class="btn btn-lg  btn-default">Back</a>
    </div>
</div>


